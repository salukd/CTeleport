{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "OpenWeatherMapApi": {
    "Address": "http://api.openweathermap.org",
    "RetryPolicyOptions": {
      "TimeoutInMilliseconds": 5000,
      "RetryCount": 5,
      "RetryTimeInMilliseconds": 2000,
      "RateLimiter": 60,
      "CircuitBreakerAllowedBeforeBreaking": 3,
      "CircuitBreakerBreakDuration": 30
    }
  }
}